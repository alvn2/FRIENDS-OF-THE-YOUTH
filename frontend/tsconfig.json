{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "skipLibCheck": true,
    // --- FIX 1: ADD VITE TYPES ---
    // Added "vite/client" to make TypeScript recognize import.meta.env
    "types": ["node", "vite/client"],
    // ----------------------------
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["."], // This includes all files in the current directory (frontend/)
  // --- FIX 2: REMOVE MISSING REFERENCE ---
  // Removed the "references" section because tsconfig.node.json was not found
  // "references": [{ "path": "./tsconfig.node.json" }]
  // -------------------------------------
}

