# ----------------------------------
# SERVER & APP CONFIG
# ----------------------------------
# Port your server will run on
PORT=5000
# Your frontend's URL for CORS
CLIENT_URL=http://localhost:3000
# Secret key for signing JWTs (use a long, random string)
JWT_SECRET=YOUR_VERY_STRONG_AND_SECRET_KEY_HERE

# ----------------------------------
# DATABASE (POSTGRESQL)
# ----------------------------------
# Connection string from your database provider (Render, Railway, Supabase, etc.)
# Example: postgresql://user:password@host:port/database
DATABASE_URL="YOUR_DATABASE_CONNECTION_STRING"

# ----------------------------------
# EMAIL (NODEMAILER)
# ----------------------------------
# SMTP credentials from your email provider (e.g., SendGrid, Brevo, Mailtrap)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your-smtp-username
EMAIL_PASS=your-smtp-password
EMAIL_FROM="Friends of the Youth <no-reply@foty.org>"

# ----------------------------------
# GOOGLE OAUTH (SOCIAL LOGIN)
# ----------------------------------
# From Google Cloud Console -> APIs & Services -> Credentials
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET
# Must match a URL in your "Authorized redirect URIs" in Google Console
GOOGLE_CALLBACK_URL=http://localhost:5000/api/v1/auth/google/callback

# ----------------------------------
# GOOGLE SHEETS API (ADMIN SYNC)
# ----------------------------------
# From the JSON key file of your Google Service Account
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
# The long ID from your Google Sheet URL
GOOGLE_SHEET_ID=YOUR_GOOGLE_SHEET_ID
# The private_key from the JSON file. Format it as a single line with \n for newlines.
# Example: "-----BEGIN PRIVATE KEY-----\nkeypart1\nkeypart2\n-----END PRIVATE KEY-----\n"
GOOGLE_PRIVATE_KEY="YOUR_GOOGLE_PRIVATE_KEY"

# ----------------------------------
# MPESA DARAJA API (DONATIONS)
# ----------------------------------
# Get these from the Safaricom Daraja Developer Portal (Sandbox)
MPESA_CONSUMER_KEY=YOUR_MPESA_CONSUMER_KEY
MPESA_CONSUMER_SECRET=YOUR_MPESA_CONSUMER_SECRET
MPESA_SHORTCODE=174379
MPESA_PASSKEY=YOUR_MPESA_SANDBOX_PASSKEY
# Must be a public URL (use ngrok for local testing)
MPESA_CALLBACK_URL=https://your-public-callback-url.com/api/v1/donations/callback